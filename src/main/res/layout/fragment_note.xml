<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dataview_margin_horizontal"
        android:layout_marginLeft="@dimen/dataview_margin_horizontal"
        android:layout_marginRight="@dimen/dataview_margin_horizontal"
        android:layout_marginTop="@dimen/dataview_margin_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/note_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dataview_text_size" />

        <ImageView
            android:id="@+id/note_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/note_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dataview_history_padding_top" />
    </LinearLayout>

</ScrollView>