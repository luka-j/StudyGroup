<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_exam"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_exam_image"
            android:layout_width="@dimen/card_image_width"
            android:layout_height="@dimen/card_image_height"
            android:layout_marginBottom="@dimen/card_image_vertical_margin"
            android:layout_marginEnd="@dimen/card_image_right_margin"
            android:layout_marginRight="@dimen/card_image_right_margin"
            android:layout_marginTop="@dimen/card_image_vertical_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/card_exam_image"
            android:layout_toRightOf="@id/card_exam_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_exam_subject_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:paddingLeft="@dimen/card_text_padding_horizontal"
                android:paddingRight="@dimen/card_text_padding_horizontal"
                android:paddingTop="@dimen/card_title_padding_vertical"
                android:textSize="@dimen/card_title_text_size"/>

            <TextView
                android:id="@+id/card_exam_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_text_padding_horizontal"
                android:paddingRight="@dimen/card_text_padding_horizontal"
                android:paddingTop="@dimen/card_subtitle1_padding_vertical"
                android:textSize="@dimen/card_subtitle1_text_size"/>

            <TextView
                android:id="@+id/card_exam_year_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/card_subtitle2_padding_vertical"
                android:paddingLeft="@dimen/card_text_padding_horizontal"
                android:paddingRight="@dimen/card_text_padding_horizontal"
                android:paddingTop="@dimen/card_subtitle2_padding_vertical"
                android:textSize="@dimen/card_subtitle1_text_size"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>