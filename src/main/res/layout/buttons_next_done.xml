<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/addview_buttons_gap"
        android:layout_marginRight="@dimen/addview_buttons_gap"
        card_view:cardBackgroundColor="?attr/colorAccent"
        card_view:cardCornerRadius="@dimen/button_corner_radius"
        card_view:cardElevation="@dimen/button_elevation">

        <TextView
            android:id="@+id/button_done_text"
            style="@style/small_button_text"
            android:text="@string/done"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="?attr/colorAccent"
        card_view:cardCornerRadius="@dimen/button_corner_radius"
        card_view:cardElevation="@dimen/button_elevation">

        <TextView
            android:id="@+id/button_next_text"
            style="@style/small_button_text"
            android:text="@string/next"/>
    </android.support.v7.widget.CardView>
</LinearLayout>