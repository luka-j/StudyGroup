<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_lesson"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:background="?android:selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/card_lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/card_title_padding_vertical_large"
        android:paddingLeft="@dimen/card_text_padding_horizontal_large"
        android:paddingRight="@dimen/card_text_padding_horizontal_large"
        android:paddingTop="@dimen/card_title_padding_vertical_large"
        android:textSize="@dimen/card_title_text_size"/>
</android.support.v7.widget.CardView>