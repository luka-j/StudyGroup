<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_lesson"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardMaxElevation="@dimen/card_elevation_picked_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:background="?android:selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_lesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_text_padding_horizontal_large"
            android:paddingRight="@dimen/card_text_padding_horizontal_large"
            android:paddingTop="@dimen/card_title_padding_vertical"
            android:textSize="@dimen/card_title_text_size"/>

        <TextView
            android:id="@+id/card_lesson_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/priv"
            android:textSize="@dimen/card_subtitle1_text_size"
            android:paddingLeft="@dimen/card_text_padding_horizontal"
            android:paddingRight="@dimen/card_text_padding_horizontal"
            android:paddingTop="@dimen/card_subtitle1_padding_vertical"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/note_count_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/card_title_padding_vertical"
                android:paddingLeft="@dimen/card_text_padding_horizontal_large"
                android:paddingRight="@dimen/card_text_padding_horizontal_large"
                android:paddingTop="@dimen/card_subtitle1_padding_vertical"
                android:textSize="@dimen/card_subtitle1_text_size" />

            <TextView
                android:id="@+id/question_count_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/card_title_padding_vertical"
                android:paddingLeft="@dimen/card_text_padding_horizontal_large"
                android:paddingRight="@dimen/card_text_padding_horizontal_large"
                android:paddingTop="@dimen/card_subtitle1_padding_vertical"
                android:textSize="@dimen/card_subtitle1_text_size" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>