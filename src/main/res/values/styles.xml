<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:activatedBackgroundIndicator">@drawable/selector_activated</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionModeBackground">@color/color_primary_dark</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="android:textColorHint">@color/light_text</item>
        <!--<item name="android:windowAnimationStyle">@null</item>-->
    </style>

    <style name="property_text">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/property_text_size</item>
        <item name="android:paddingTop">@dimen/property_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/property_padding_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="property_title_text" parent="property_text">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">0.55</item>
        <item name="android:paddingRight">@dimen/property_padding_horizontal</item>
    </style>
    <style name="small_button_position">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_below">@id/add_course_image</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/shadow_space</item>
        <item name="android:layout_marginLeft">@dimen/button_corner_radius</item>
        <item name="android:layout_marginRight">@dimen/button_corner_radius</item>
    </style>
    <style name="small_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingBottom">@dimen/button_text_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/button_text_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/button_text_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_text_padding_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="long_button_text" parent="small_button_text">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="long_button_position">
        <item name="android:layout_marginBottom">@dimen/shadow_space</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/button_corner_radius</item>
        <item name="android:layout_marginRight">@dimen/button_corner_radius</item>
    </style>

</resources>
